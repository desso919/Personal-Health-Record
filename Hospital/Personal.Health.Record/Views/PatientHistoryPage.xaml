<Page x:Class="Personal.Health.Record.Views.PatientHistoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Personal.Health.Record.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	  Title="Personal Health Application - Patient History" Height="600" Width="850">

    <Page.DataContext>
        <local:PatientHistoryViewModel/>
    </Page.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.Background>
            <ImageBrush ImageSource="start.jpg"/>
        </Grid.Background>


        <!-- Application Name -->
        <Label Content="Personal Health Application" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" 
               Width="482" FontStyle="Italic" FontSize="18" FontStretch="Condensed" FontWeight="Bold" Height="38"/>

        <Label Content="Patient History: " HorizontalAlignment="Left" Margin="51,157,0,0" FontWeight="Bold" VerticalAlignment="Top" Width="170"/>
        <ListBox  HorizontalContentAlignment="Stretch" Margin="51,106,70,158" Name="listBox1" ItemsSource="{Binding Histories}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Name="doctor" Grid.Column="0" Text="{Binding Path=DoctorId}" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                        <TextBox Name="hospital" Grid.Column="1" Text="{Binding Path=HospitalId}" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                        <TextBox Name="data" Grid.Column="2" Text="{Binding Path=Data}" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                        <TextBox Name="reason" Grid.Column="3" Text="{Binding Path=Reason}" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                        <TextBox Name="diagnose" Grid.Column="4" Text="{Binding Path=Diagnose}" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                        <TextBox Name="desciption" Grid.Column="5" Text="{Binding Path=Description}" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>


        <Button Content="Show History" HorizontalAlignment="Left" Margin="51,471,0,0" Command="{Binding ShowHistoriesCommand}" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Page>
